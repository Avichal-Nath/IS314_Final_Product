<!-- app/views/clients/orders/show.html.erb -->
<div class="container mt-5">
  <h1>Order Summary</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <<tr>
          <td><%= item.product.name %></td>
          <td><%= number_to_currency(item.unit_price) %></td> <!-- Changed to unit_price -->
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.unit_price * item.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-4 offset-md-8">
      <table class="table">
        <tr>
          <th>Subtotal</th>
          <td><%= number_to_currency(@order.subtotal) %></td>
        </tr>
        <tr>
          <th>Shipping</th>
          <td><%= number_to_currency(@order.shipping_cost) %></td>
        </tr>
        <tr>
          <th>Total</th>
          <td><%= number_to_currency(@order.total) %></td>
        </tr>
      </table>
    </div>
  </div>

  <%= link_to 'Back to Home', clients_root_path, class: 'btn btn-primary' %>
</div>
