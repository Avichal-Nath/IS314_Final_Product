<div class="container my-5">
  <h1>Welcome to Oxygen Exclusive Web page</h1>
  
  <!-- Featured Products Section -->
  <h2 class="section-title">Featured Products</h2>
  <div class="row">
    <% @featured_products.each do |product| %>
      <div class="col-md-3">
        <div class="card">
          <%= image_tag product.image, class: 'card-img-top' %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= number_to_currency(product.price) %></p>
            <%= link_to 'View Product', clients_product_path(product), class: 'btn btn-custom' %>
            <%= button_to 'Add To Cart', add_item_to_cart_clients_cart_path(product_id: product.id), method: :post, class: 'btn btn-cart' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- On Sale Section -->
  <h2 class="section-title mt-4">On Sale</h2>
  <div class="row">
    <!-- Placeholder for On Sale Products -->
    <% 4.times do %> <!-- Display 4 placeholder cards -->
