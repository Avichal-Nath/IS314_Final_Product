        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title">On Sale Item</h5>
            <p class="card-text">Placeholder Price</p>
            <button class="btn btn-secondary" disabled>Add to Cart</button>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-md-2 d-flex align-items-center">
      <%= link_to 'View More', '#', class: 'btn btn-primary' %>
    </div>
